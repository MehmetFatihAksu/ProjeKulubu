<div class="page-title">
    <div>
        <h1><i class="fa fa-calendar"></i> Takvim</h1>
        <h4>Etkinliklerinizi Düzenleyebilirsiniz</h4>
    </div>
</div>

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="index.html">Home</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li class="active">Calendar</li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-title">
                <h3><i class="fa fa-calendar"></i> Calendar</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                <div class="row">
                    <div class="col-md-3 responsive" data-tablet="col-md-12 fix-margin" data-desktop="col-md-8">
                        <!-- BEGIN DRAGGABLE EVENTS PORTLET-->
                        <h3 class="event-form-title">Draggable Events</h3>
                        <div id="external-events">
                            <form class="inline-form">
                                <p><input type="text" value="" class="col-md-12" placeholder="Event Title..." id="event_title" /></p>
                                <p>
                                    <select id="event_priority" data-placeholder="Select Label..." class="col-md-12 chosen">
                                        <option value="default">Default</option>
                                        <option value="success">Normal</option>
                                        <option value="info">Medium</option>
                                        <option value="warning">Urgent</option>
                                        <option value="important">Important</option>
                                    </select>
                                </p>
                                <p><a href="javascript:;" id="event_add" class="btn btn-primary">Add Event</a></p>
                            </form>
                            <hr />
                            <div id="event_box"></div>
                            <p><label for="drop-remove"><input type="checkbox" id="drop-remove" /> Remove after drop</label></p>
                            <hr class="visible-sm" />
                        </div>
                        <!-- END DRAGGABLE EVENTS PORTLET-->
                    </div>
                    <div class="col-md-9">
                        <div id="calendar" class="has-toolbar"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

