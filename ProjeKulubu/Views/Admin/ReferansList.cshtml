@model IEnumerable<ProjeKulubu.Models.Referanslar>

@{
    Layout = null;
}

<script src="~/Content/AdminContent/js/buttonActions.js"></script>

<div class="row">
    <div class="col-md-12">
        <div class="box box-black">
            <div class="box-title">
                <h3><i class="fa fa-bars"></i> Mevcut Yayındaki Referanslar</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                <div class="btn-toolbar pull-right">
                    <div class="btn-group">
                        <a class="btn btn-circle show-tooltip" id="NewAdd" onclick="GoAddProject()" title="" data-original-title="Yeni Ekle"><i class="fa fa-plus"></i></a>
                        <a class="btn btn-circle show-tooltip" title="Düzenle" href="#"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-circle show-tooltip" title="Silme" href="#"><i class="fa fa-trash-o"></i></a>
                    </div>
                    <div class="btn-group">
                        <a class="btn btn-circle show-tooltip" title="Yenile" href="#"><i class="fa fa-repeat"></i></a>
                    </div>
                </div>
                <br /><br />
                <div class="table-responsive">
                    <table class="table table-advance">
                        <thead>
                            <tr>
                                <th style="width:18px"><input type="checkbox" /></th>
                                <th>ID</th>
                                <th>Referans Başlığı</th>
                                <th>Referans Adresi</th>
                                <th>Referans Resim</th>
                                <th>Resim SEO</th>
                                <th>Düzenleme</th>
                                <th>Silme</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr class="table-flag-blue">
                                    <td><input type="checkbox" /></td>
                                    <td>@Html.DisplayFor(a => item.ID)</td>
                                    <td>@Html.DisplayFor(a => item.Baslik)</td>
                                    <td><a href="#" target="_blank">@Html.DisplayFor(a => item.SiteURL)</a></td>
                                    <td>RESİM</td>
                                    <td>@Html.DisplayFor(a=>item.SeoAlt)</td>
                                    <td><a class="btn btn-sm show-tooltip" title="Düzenleme" href="@Url.Action("ReferansEdit",new {id=item.ID })"><i class='fa fa-edit'></i></a></td>
                                    <td><a class="btn btn-danger show-tooltip" title="Silme" href="@Url.Action("ReferansDelete",new {id=item.ID })"><i class='fa fa-trash-o'></i></a></td> 
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
                <div class="text-center">
                    <ul class="pagination">
                        <li><a href="#">‹ Önceki</a></li>
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">Sonraki › </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


