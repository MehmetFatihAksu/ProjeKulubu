@{
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/AdminContent/assets/img/apple-icon.png">
    
    <link rel="icon" type="image/png" sizes="96x96" href="~/Content/AdminContent/assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Proje Kulübü Türkiye</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/AdminContent/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap core CSS     -->
    
    <!-- Animation library for notifications   -->
    <link href="~/Content/AdminContent/assets/css/animate.min.css" rel="stylesheet" />
  
    <!--  Paper Dashboard core CSS    -->

    <link href="~/Content/AdminContent/assets/css/paper-dashboard.css" rel="stylesheet" />
   

    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="~/Content/AdminContent/assets/css/demo.css" rel="stylesheet" />
  

    <!--  Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="~/Content/AdminContent/assets/css/themify-icons.css" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <div class="sidebar" data-background-color="white" data-active-color="danger">
            <!--
                Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
                Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
            -->
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="@Url.Action("Index","Admin")" class="simple-text" style="font-size: 17px;">
                       Proje Kulübü Türkiye
                    </a>
                </div>
                <ul class="nav">
                    <li class="active">
                        <a href="@Url.Action("Index","Admin")">
                            <i class="ti-panel"></i>
                            <p>Slider Yönetimi</p>
                               @*SliderMetin Yönetimi 
                               SliderGörsel Yönetimi*@ 
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Team","Admin")">
                            <i class="ti-user"></i>
                            <p>Ekip Yönetimi</p>
                            @*Satış Ofisi Yönetimi 
                            Ekip Üye Yönetimi 
                            Çalışan Yönetimi*@ 
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Content","Admin")">
                            <i class="ti-view-list-alt"></i>
                            <p>İçerik Yönetimi</p>
                              @*-Hakkımızda Metni Düzenle
                              -Vizyon Metni Düzenle 
                              -Misyon Metni Düzenle
                              -Biz Kimiz ? Metni Düzenle 
                              -Neler Yaparız ? Metni Düzenle*@ 

                            @*Bu Kısım Müşterinin durumuna göre kaldıracak yada sürdürülecektir.*@
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Reference", "Admin")">
                            <i class="ti-text"></i>
                            <p>Referans Yönetimi</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Comment", "Admin")">
                            <i class="ti-pencil-alt2"></i>
                            <p>Yorum Yönetimi</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Education", "Admin")">
                            <i class="ti-alarm-clock"></i>
                            <p>Eğitim Yönetimi</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Project", "Admin")">
                            <i class="ti-map"></i>
                            <p>Proje Yönetimi</p>
                            @*Tamamlanan Projeler
                            Satışı Devam Eden Projeler 
                            Yakındaki Projeler*@
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("QuestionRequest", "Admin")">
                            <i class="ti-bell"></i>
                            <p>S.S.S Yönetimi</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar bar1"></span>
                            <span class="icon-bar bar2"></span>
                            <span class="icon-bar bar3"></span>
                        </button>
                        <a class="navbar-brand" href="@Url.Action("Index","Admin")">Yönetim Paneli</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            @*<li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="ti-panel"></i>
                                    <p>Stats</p>
                                </a>
                            </li>*@
                            <li class="dropdown">
                                    <a href="@Url.Action("Settings","Admin")">
                                        <i class="ti-settings"></i>
                                        <p>Ayarlar</p>

                                    </a>
                                @*<ul class="dropdown-menu">
                                    <li><a href="#">Notification 1</a></li>
                                    <li><a href="#">Notification 2</a></li>
                                    <li><a href="#">Notification 3</a></li>
                                    <li><a href="#">Notification 4</a></li>
                                    <li><a href="#">Another notification</a></li>
                                </ul>*@
                            </li>
                            <li>
                                <a href="@Url.Action("LogOut","Admin")">
                                    <i class="ti-lock"></i>
                                    <p>Çıkış Yap</p>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="content">@RenderBody()</div>

            <footer class="footer">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a href="@Url.Action("Index","Admin")">
                                   Proje Kulübü Türkiye 
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("HelpDetail","Admin")">
                                    Yardım Klavuzu
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <div class="copyright pull-right">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script>, Powered <i class="fa fa-heart heart"></i> by <a href="http://cizgitech.com/"> Çizgi-Tech</a>
                    </div>
                </div>
            </footer>
        </div>
    </div>

</body>
<!--   Core JS Files   -->
<script src="~/Content/AdminContent/assets/js/jquery-1.10.2.js" type="text/javascript"></script>
<script src="~/Content/AdminContent/assets/js/bootstrap.min.js" type="text/javascript"></script>
<!--  Checkbox, Radio & Switch Plugins -->
<script src="~/Content/AdminContent/assets/js/bootstrap-checkbox-radio.js"></script>
<!--  Charts Plugin -->
<script src="~/Content/AdminContent/assets/js/chartist.min.js"></script>
<!--  Notifications Plugin    -->
<script src="~/Content/AdminContent/assets/js/bootstrap-notify.js"></script>
<!--  Google Maps Plugin    -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>
<!-- Paper Dashboard Core javascript and methods for Demo purpose -->
<script src="~/Content/AdminContent/assets/js/paper-dashboard.js"></script>
<!-- Paper Dashboard DEMO methods, don't include it in your project! -->
<script src="~/Content/AdminContent/assets/js/demo.js"></script>
<script type="text/javascript">
    	$(document).ready(function(){

        	demo.initChartist();

        	$.notify({
            	icon: 'ti-gift',
            	message: "Welcome to <b>Paper Dashboard</b> - a beautiful Bootstrap freebie for your next project."

            },{
                type: 'success',
                timer: 4000
            });

    	});
</script>
</html>
