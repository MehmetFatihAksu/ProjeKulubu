@using ProjeKulubu.Models
@model Reference

@{
    ViewBag.Title = "ReferenceUpdate";
    Layout = "~/Views/AdminShared/_Layout.cshtml";
}

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Admin")">Ana Sayfa</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li>
            <i class="fa fa-star"></i>
            <a href="@Url.Action("ReferenceIndex","Reference")">Referans Yönetimi</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li class="active"><i class="fa fa-edit"></i>Referans Düzenleme Ekranı</li>
    </ul>
</div>@*Header*@

<div class="row">
    <div class="col-md-12">
        <div class="box box-black">
            <div class="box-title">
                <h3><i class="fa fa-edit"></i>Mevcut Referansın Düzenlenme Formu</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                <form action="/Reference/ReferenceDataUpdate" class="form-horizontal form-row-separated" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">* Referans Başlığı:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" style="color:#000000" required oninvalid="this.setCustomValidity('Referans başlığını boş geçemezsiniz')" oninput="setCustomValidity('')" name="ReferenceName" id="ReferenceName" placeholder="Referans Başlığı Giriniz" class="form-control show-popover" data-trigger="hover" data-content="Bu kısıma referans başlığınızı giriniz" data-original-title="Referans Başlığı" value="@Model.ReferenceTitle" data-placement="left">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">* Referans Site Adresi:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" name="ReferenceURL" required oninvalid="this.setCustomValidity('Yanlış Formatta giriş yaptınız')" oninput="setCustomValidity('')" style="color:#000000" id="ReferenceURL" placeholder="www." class="form-control show-popover" data-trigger="hover" data-content="Bu kısıma referansınızın site adresini giriniz" data-original-title="Referans Site Adresi" value="@Model.ReferenceLink" data-placement="left">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2 control-label">* Referans Resmi:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="fileupload-new img-thumbnail" style="width: 200px; height: 150px;">
                                    <img src="~/Dosyalar/@Model.ReferencePictureURL" alt="" />
                                </div>
                                <div class="fileupload-preview fileupload-exists img-thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                <div>
                                    <span class="btn btn-default btn-file">
                                        <span class="fileupload-new">Resim Seç</span>
                                        <span class="fileupload-exists">Değiştir</span>

                                        <input type="file" accept="image/*"  id="uploadFile" name="ReferencePicture" class="file-input" />
                                    </span>
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">* Referans Resim SEO:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" style="color:#000000" required oninvalid="this.setCustomValidity('SEO kısmını boş geçemezsiniz')" oninput="setCustomValidity('')" name="ReferencePictureSEO" id="ReferencePictureSEO" placeholder="SEO Kelimenizi Giriniz" class="form-control show-popover" data-trigger="hover" data-content="Bu kısıma referans resminiz için anahtar kelime giriniz" value="@Model.ReferencePictureSEO" data-original-title="Referans Resim SEO" data-placement="left">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                            <input type="hidden" id="dataId" name="Id" value="@Model.ID" />
                            <button type="submit" class="btn btn-primary" style="float:right"><i class="fa fa-check-circle"></i> Kaydet</button>
                            <a class="btn btn-danger" style="float:left" href="@Url.Action("ReferenceIndex","Reference")">Geri Dön</a>

                        </div>
                    </div>
                    <div class="form-group last">
                        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                            <h6 style="float:right">Başında * Olan Yerler Doldurulmak Zorundadır.</h6>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>@*Reference Update Form*@

<footer>
    <p>2016 © <a target="_blank" href="http://www.cizgitech.com">Cizgi-Tech</a> Yazılım Çözümleri</p>
</footer>@*Footer*@


