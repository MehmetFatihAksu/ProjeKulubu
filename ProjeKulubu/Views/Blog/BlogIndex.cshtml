@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "BlogIndex";
    Layout = "~/Views/AdminShared/_Layout.cshtml";
}

<div class="page-title">
    <div>
        <h1><i class="fa fa-bars"></i> Makale Yönetimi</h1>
        <h4>Bu kısımda makale ekleyip silebilir veya düzenleyebilirsiniz</h4>
    </div>
</div> @*Header 1*@

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Admin")">Ana Sayfa</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li class="active">Makale Yönetimi</li>
    </ul>
</div> @*Header 2*@

<div class="row">
    <div class="col-md-12">
        <div class="box box-black">
            <div class="box-title">
                <h3><i class="fa fa-tasks"></i> Makale Ekleme Formu</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                <form action="/Blog/AddBlog" method="post"  enctype="multipart/form-data" class="form-horizontal form-row-separated">
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">* Makale Başlığı:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" name="title" required oninvalid="this.setCustomValidity('Makale Başlığını Boş Bırakamazsınız')" oninput="setCustomValidity('')" style="color:#000000" id="title" placeholder="Makale Başlığını Giriniz" class="form-control show-popover" data-trigger="hover" data-content="Bu kısıma makale başlığını giriniz..." data-original-title="Makale Başlığı" data-placement="left">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2 control-label">Etiket Ekle:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input id="tag-input-1"  style="color:#000000" name="tag" type="text" class="form-control tags show-popover" value="" data-trigger="hover" data-content="Bu kısıma etiket kelimeler giriniz..." data-original-title="Etiket Ekle" data-placement="left" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2 control-label">Makale Resim Yükleme:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="fileupload-new img-thumbnail" style="width: 200px; height: 150px;">
                                    <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="" />
                                </div>
                                <div class="fileupload-preview fileupload-exists img-thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                <div>
                                    <span class="btn btn-default btn-file">
                                        <span class="fileupload-new">Resim Seç</span>
                                        <span class="fileupload-exists">Değiştir</span>
                                        <input type="file" name="picture" id="picture" class="file-input" />
                                    </span>
                                    <a href="#" class="btn btn-default fileupload-exists" data-dismiss="fileupload">Sil</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Makale Resim SEO:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" style="color:#000000" name="seo" id="seo" placeholder="SEO Kelimenizi Giriniz" class="form-control show-popover" data-trigger="hover" data-content="Bu kısıma makalenizin resmiyle alakalı anahtar kelime giriniz" data-original-title="Makale Resim Seo Anahtarı" data-placement="left">
                        </div>
                    </div>
                    <div class="box-content">

                        <div class="form-group">
                            <label class="col-sm-3 col-lg-2 control-label">* Makale İçeriği:</label>
                            <div class="col-sm-9 col-lg-10 controls">
                                <textarea class="form-control col-md-12 ckeditor" name="content" rows="6"></textarea>
                            </div>
                        </div>

                    </div>

                    <div class="form-group last">
                        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary" style="float:right" onclick="DataSave()"><i class="fa fa-check-circle"></i> Kaydet</button>
                            <h6 style="float:left">Başında * Olan Yerler Doldurulmak Zorundadır.</h6>

                         </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> @*Add Blog*@

<div class="row">
    <div class="col-md-12">
        <div class="box box-black">
            <div class="box-title">
                <h3><i class="fa fa-bars"></i> Mevcut Yayındaki Ekip Üyeleri</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                <div class="btn-toolbar pull-right">
                    <div class="btn-group">
                        <a class="btn btn-circle show-tooltip" id="NewAdd" onclick="GoAddProject()" title="" data-original-title="Yeni Ekle"><i class="fa fa-plus"></i></a>
                        <a class="btn btn-circle show-tooltip" title="Silme" href="#"><i class="fa fa-trash-o"></i></a>
                    </div>
                    <div class="btn-group">
                        <a class="btn btn-circle show-tooltip" title="Yenile" href="@Url.Action("BlogIndex","Blog")"><i class="fa fa-repeat"></i></a>
                    </div>
                </div>
                <br /><br />
                <div class="table-responsive">
                    <table class="table table-advance">
                        <thead>
                            <tr>
                                <th style="width:18px"><input type="checkbox" /></th>
                                <th>ID</th>
                                <th>Başlık</th>
                                <th>Etiketler</th>
                                <th>Resim</th>
                                <th>ResimSEO</th>
                                <th>İçerik</th>
                                <th>Tarih</th>
                                <th>Görüntülenme</th>
                                <th>İncele</th>
                                <th>Düzenleme</th>
                                <th>Silme</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var list in ViewBag.Show)
                            {
                                <tr class="table-flag-blue">
                                    <td><input type="checkbox" /></td>
                                    <td>@list.ID</td>
                                    <td>@list.BlogTitle</td>
                                    <td>Etiket</td>
                                    <td>
                                        <ul class="gallery">
                                            <li>
                                                <a href="~/Dosyalar/@list.BlogPictureURL" class="show-tooltip" title="Resmi İnceleyin" rel="prettyPhoto">
                                                    <div>
                                                        <span class="fa fa-image"></span>
                                                    </div>
                                                </a>
                                            </li>
                                        </ul>
                                    </td>
                                    <td>@list.BlogPictureSEO</td>
                                    <td>@list.BlogContent</td>
                                    <td>Tarih</td>
                                    <td>Görüntü</td>
                                    <td><a class="btn btn-sm show-tooltip" title="İncele" href="@Url.Action("BlogView","Blog")/@list.ID"><i class="fa fa-search"></i></a></td>
                                    <td><a class="btn btn-sm show-tooltip" title="Düzenleme" href="@Url.Action("BlogUpdate","Blog")/@list.ID"><i class="fa fa-edit"></i></a></td>
                                    <td><a class="btn btn-sm btn-danger show-tooltip" title="Silme" href="@Url.Action("BlogDelete","Blog")/@list.ID"><i class="fa fa-trash-o"></i></a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="text-center">
                    <ul class="pagination">
                        @Html.PagedListPager((IPagedList)ViewBag.Show, page => Url.Action("BlogIndex", new { page }), new PagedListRenderOptions { LinkToPreviousPageFormat = "‹ Önceki", LinkToNextPageFormat = "Sonraki ›" })
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> @*Blog List*@

<footer>
    <p>2016 © <a target="_blank" href="http://www.cizgitech.com">Cizgi-Tech</a> Yazılım Çözümleri</p>
</footer> @*Footer*@

