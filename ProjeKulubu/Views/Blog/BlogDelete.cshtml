@model ProjeKulubu.Models.Blog

@{
    ViewBag.Title = "BlogDelete";
    Layout = "~/Views/AdminShared/_Layout.cshtml";
}


<link rel="stylesheet" type="text/css" href="/Content/AdminContent/assets/jquery-tags-input/jquery.tagsinput.css" />
<link rel="stylesheet" type="text/css" href="/Content/AdminContent/assets/bootstrap-fileupload/bootstrap-fileupload.css" />

<script type="text/javascript">

    function DataDelete() {

        $.ajax({

            type: "POST",
            url: "/Blog/BlogDataDelete/",
            data: { id : $("#dataId").val()},
            ajaxasync: true,
            traditional: true,
            success: function (response) {
                alert("Blog Başarıyla Silindi");
                window.location.href = "/Blog/BlogIndex";
            },
            error: function (response) {
                console.log("Hata Oluştu");
            }

        });
    }

</script>

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Admin")">Ana Sayfa</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li>
            <i class="fa fa-tasks"></i>
            <a href="@Url.Action("BlogIndex","Blog")">Makale Yönetimi</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li class="active"><i class="fa fa-trash-o"></i>Makale Silme Ekranı</li>
    </ul>
</div>

<aside id="QuesionDeleteDetail" class="QuestionContent">

    <form action="/Blog/BlogDelete" class="form-horizontal form-row-separated">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-black">
                    <div class="box-title">
                        <h3><i class="fa fa-trash-o"></i> Mevcut Makaleyi Silmek İstediğinizden Eminmisiniz ?</h3>
                        <div class="box-tool">
                            <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                            <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <div class="form-group">
                            <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Makale ID:</label>
                            <div class="col-sm-9 col-lg-10 controls">

                                <input type="text" style="color:#000000" class="form-control show-popover" disabled value="@Model.ID" id="ID" name="textfield3" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Makale Başlığı:</label>
                            <div class="col-sm-9 col-lg-10 controls">
                                <input type="text" class="form-control show-popover" value="@Model.BlogTitle" style="color:#000000" disabled id="QuestionContent" name="textfield3" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 col-lg-2 control-label">Etiketler:</label>
                            <div class="col-sm-9 col-lg-10 controls">
                                <input id="tag-input-1" style="color:#000000" name="tag" disabled type="text" class="form-control tags show-popover" value="" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 col-lg-2 control-label">Makale Resim:</label>
                            <div class="col-sm-9 col-lg-10 controls">
                                <div class="fileupload fileupload-new" data-provides="fileupload">
                                    <div class="fileupload-new img-thumbnail" style="width: 200px; height: 150px;">
                                        <img src="~/Dosyalar/@Model.BlogPictureURL" alt="" />
                                    </div>
                                    <div class="fileupload-preview fileupload-exists img-thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Makale Resim SEO:</label>
                            <div class="col-sm-9 col-lg-10 controls">
                                <input type="text" name="seo" id="seo" disabled value="@Model.BlogPictureSEO" style="color:#000000" class="form-control show-popover" >
                            </div>
                        </div>
                        <div class="box-content">

                            <div class="form-group">
                                <label class="col-sm-3 col-lg-2 control-label">Makale İçeriği:</label>
                                <div class="col-sm-9 col-lg-10 controls">
                                    <textarea class="form-control col-md-12" style="color:#000000" disabled name="content" rows="6">@Model.BlogContent</textarea>
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                                <input type="hidden" id="dataId" value="@Model.ID" />
                                <input type="button" class="btn btn-primary" style="float:right" value="Sil" onclick="DataDelete()" />
                                @ViewBag.Error
                                <a class="btn btn-danger" style="float:left" href="@Url.Action("BlogIndex","Blog")">Geri Dön</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
</form>
</aside>


    <footer>
        <p>2016 © <a href="http://www.cizgitech.com">Cizgi-Tech</a> Yazılım Çözümleri</p>
    </footer>


<a id="btn-scrollup" class="btn btn-circle btn-lg" href="#"><i class="fa fa-chevron-up"></i></a>

<script type="text/javascript" src="/Content/AdminContent/assets/jquery-tags-input/jquery.tagsinput.min.js"></script>
