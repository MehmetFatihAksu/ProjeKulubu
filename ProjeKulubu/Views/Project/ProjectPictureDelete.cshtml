@using ProjeKulubu.Models;
@model ProjectPicture
@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "ProjectPictureDelete";
    Layout = "~/Views/AdminShared/_Layout.cshtml";
}


<script type="text/javascript">

    function ProjectPictureDelete() {

        $.ajax({

            type: "POST",
            url: "/Project/ProjectPictureDataDelete/",
            data: { id: $("#dataId").val() },
            ajaxasync: true,
            traditional: true,
            success: function (response) {
                alert("Proje Resmi Başarıyla Silindi");
                window.location.href = "/Project/ProjectPictureIndex";
            },
            error: function (response) {
                console.log("Hata Oluştu");
            }

        });
    }
</script>


<div class="page-title">
    <div>
        <h1><i class="fa fa-star"></i> Proje Resimleri Silme </h1>
        <h4>Projenize Ait Bu Resmi Silmek İstediğinize Emin Misiniz?</h4>
    </div>
</div>

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Admin")">Ana Sayfa</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li class="active">Proje Görsel Yönetimi</li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="box box-black">
            <div class="box-title">
                <h3><i class="fa fa-star"></i>Proje Resimleri Silme Formu</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                <div class="form-group">
                    <label for="textfield3" class="col-sm-3 col-lg-2 control-label">*Resmin Şuan Ait Olduğu Proje:</label>
                    <div class="col-sm-9 col-lg-10 controls">
                        <input type="text" name="Project" disabled value="@Model.Project.ProjectName" style="color:#000000" id="Project" class="form-control show-popover" data-trigger="hover" data-content="bu kısımda resminizin hangi Projee ait olduğu gösterilir." data-original-title="Proje Resim" data-placement="left">
                    </div>
                </div>

                <div class="form-group">
                    <label for="textfield3" class="col-sm-3 col-lg-2 control-label">* Proje Resmi:</label>
                    <div class="col-sm-9 col-lg-10 controls">
                        <img src="~/Dosyalar/@Model.PictureURL" alt="@Model.PictureSEO" width="200" height="200" />
                    </div>

                </div>
                <div class="form-group">
                    <label for="textfield3" class="col-sm-3 col-lg-2 control-label">* Proje Resim SEO:</label>
                    <div class="col-sm-9 col-lg-10 controls">
                        <input type="text" disabled value="@Model.PictureSEO" name="ProjectPictureSEO" required oninvalid="this.setCustomValidity('SEO kısmını boş geçemezsiniz')" oninput="setCustomValidity('')" style="color:#000000" id="ProjePictureSEO" placeholder="SEO Kelimenizi Giriniz" class="form-control show-popover" data-trigger="hover" data-content="Bu kısıma proje resminiz için maksimum üç anahtar kelime giriniz" data-original-title="Proje Resim SEO" data-placement="left">
                    </div>
                </div>
                <div class="form-group">
                    <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Proje Resim Açıklama:</label>
                    <div class="col-sm-9 col-lg-10 controls">
                        <input type="text" disabled value="@Model.PictureALT" name="ProjectPictureDesc" id="ProjectPictureDesc" style="color:#000000" placeholder="Kısa Açıklama Cümlesi Giriniz" class="form-control show-popover" data-trigger="hover" data-content="Bu kısıma proje resminiz için kısa açıklama giriniz" data-original-title="Proje Resim Açıklama" data-placement="left">
                    </div>
                </div>
                <div class="form-group last">
                    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                        <input type="hidden" id="dataId" value="@Model.ID" />
                        <button type="submit" class="btn btn-primary" onclick="ProjectPictureDelete()" style="float:right"><i class="fa fa-check-circle"></i> Sil </button>
                        @ViewBag.Error
                        <a class="btn btn-danger" style="float:left" href="@Url.Action("OfficePictureIndex","Office")">Geri Dön</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<footer>
    <p>2016 © <a target="_blank" href="http://www.cizgitech.com">Cizgi-Tech</a> Yazılım Çözümleri</p>
</footer>@*Footer*@

<a id="btn-scrollup" class="btn btn-circle btn-lg" href="#"><i class="fa fa-chevron-up"></i></a>
<script type="text/javascript" src="/Content/AdminContent/assets/bootstrap-fileupload/bootstrap-fileupload.min.js"></script>
<script src="~/Content/AdminContent/js/buttonActions.js"></script>
<link rel="stylesheet" type="text/css" href="/Content/AdminContent/assets/bootstrap-fileupload/bootstrap-fileupload.css" />