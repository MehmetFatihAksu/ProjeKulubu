@using ProjeKulubu.Models;
@model Project

@{
    ViewBag.Title = "CompleteProjectUpdate";
    Layout = "~/Views/AdminShared/_Layout.cshtml";
}


<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Admin")">Ana Sayfa</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li>
            <i class="fa fa-gavel"></i>
            <a href="@Url.Action("CompleteProjects", "Project")">Tamamlanan Proje Yönetimi</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li class="active"><i class="fa fa-edit"></i>Proje Düzenleme Ekranı</li>
    </ul>
</div>@*Header 1*@

<div class="row">
    <div class="col-md-12">
        <div class="box box-black">
            <div class="box-title">
                <h3><i class="fa fa-edit"></i>Mevcut Projenin Düzenleme Formu</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                <form action="/Project/CompleteProjectDataUpdate" onsubmit="return (Control());" method="post" enctype="multipart/form-data" class="form-horizontal form-row-separated">
                    <div class="form-group">
                        <label for="textfield1" class="col-xs-3 col-lg-2 control-label">* İsim : </label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" name="Name" value="@Model.ProjectName" oninput="setCustomValidity('')" class="form-control show-popover" data-trigger="hover" style="color:#000000" data-content="Bu kısıma proje ismini giriniz..." data-original-title="Proje İsmi" data-placement="left" required oninvalid="this.setCustomValidity('Proje İsmini Boş Bırakamazsınız')" placeholder="Proje İsim">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password1" class="col-xs-3 col-lg-2 control-label">* Tipi :</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <select style="color:#000000"  class="form-control" tabindex="1" name="Type">
                                <option selected value="@Model.ProjectType">Şuan Ki Tipi : @Model.ProjectType</option>
                                <option value="Plaza">Plaza</option>
                                <option value="IsMerkezi">İş Merkezi</option>
                                <option value="Fabrika">Fabrika</option>
                                <option value="Villa">Villa</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textarea2" class="col-xs-3 col-lg-2 control-label">* İçerik :</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <textarea name="Content" class="form-control ckeditor">@Model.ProjectContent</textarea>
                        </div>
                    </div>


                    <!-- BEGIN Right Side -->
                    <div class="form-group">
                        <label for="textfield2" class="col-xs-3 col-lg-2 control-label">* Bütçe :</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" name="Bugdet" id="PBudget" value="@Model.ProjectBudgets" class="form-control show-popover" onkeypress="return OnlyNumber();" data-trigger="hover" style="color:#000000" data-content="Bu kısıma projenin bütçe aralığını giriniz..." data-original-title="Proje Bütçesi" required oninvalid="this.setCustomValidity('Proje Bütçesinizi Boş Bırakamazsınız')" oninput="setCustomValidity('')" data-placement="left" placeholder="Proje Bütçe">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Location" class="col-xs-3 col-lg-2 control-label">* Birim :</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <select style="color:#000000" class="form-control" name="Birim" tabindex="1">
                                <option selected value="@Model.ProjectMoneyType" >Şuan Ki Para Birimi : @Model.ProjectMoneyType</option>
                                <option value="TurkLirasi">Türk Lirası (TL)</option>
                                <option value="AmerikanDolari">Amerikan Doları ($)</option>
                                <option value="Euro">Euro (€)</option>
                                <option value="Pound">Pound(£)</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="tel" class="col-xs-3 col-lg-2 control-label">* Yıl :</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <select style="color:#000000" class="form-control" name="Year" tabindex="1">
                                <option selected value="@Model.ProjectYear">Şuan Ki Yıl : @Model.ProjectYear</option>
                                <option value="2019">2019</option>>
                                <option value="2018">2018</option>
                                <option value="2017">2017</option>
                                <option value="2016">2016</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="tel" class="col-xs-3 col-lg-2 control-label">* Zaman :</label>
                        <div class="col-sm-9 col-lg-10 controls">
                                               <select style="color:#000000" class="form-control" name="Zaman" tabindex="1">
                            <option selected value="@Model.ProjectWorkingTimes">Şuan ki Çaışma Saatleri: @Model.ProjectWorkingTimes</option>
                                                   <option value="Hafta-İçi(9:00-17:00)">Hafta-İçi(9:00-17:00)</option>
                            <option value="Hafta-İçi(9:00-17:00),Cumartesi(9:00-13:00)">Hafta-İçi(9:00-17:00),Cumartesi(9:00-13:00)</option>
                            <option value="Cumartesi-Pazar(10:30-15:00)">Cumartesi-Pazar(10:30-15:00)</option>
                        </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="tel" class="col-xs-3 col-lg-2 control-label">* Telefon :</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input class="form-control col-md-5 show-popover" onkeypress="return OnlyNumber();" name="Telefon" id="PPhone" type="text" style="color:#000000" value="@Model.ProjectPhone" maxlength="10" placeholder="Telefon Numarası" data-trigger="hover" oninput="setCustomValidity('')" data-content="Bu kısıma projenizin iletişim  numarasını giriniz..." required oninvalid="this.setCustomValidity('Proje İletişim Numarasını Boş Bırakamazsınız')" data-original-title="Proje Telefon" data-placement="left">
                            <span class="help-inline">(212) 212-2121</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Email" class="col-xs-3 col-lg-2 control-label">* E-Mail : </label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <div class="input-group">
                                <span class="input-group-addon">@@</span>
                                <input class="form-control show-popover" id="PEMail" name="EMail" type="text" value="@Model.ProjectMail" style="color:#000000" placeholder="Email" data-trigger="hover" data-content="Bu kısıma projenizin iletişim E-posta adresini giriniz..." required oninvalid="this.setCustomValidity('Proje İletişim Mailini Boş Bırakamazsınız')" oninput="setCustomValidity('')" data-original-title="Proje E-Posta" data-placement="left">
                            </div>
                            <span class="help-inline">deneme@deneme.com</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textarea2" class="col-xs-3 col-lg-2 control-label">* Adres :</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <textarea name="Adres" id="PAdress" rows="5" class="form-control show-popover" style="color:#000000"  data-trigger="hover" oninput="setCustomValidity('')" data-content="Bu kısıma ofisinizin adres bilgisini giriniz..." data-original-title="Ofis Adres" data-placement="left" placeholder="Adres içeriği giriniz..." required oninvalid="this.setCustomValidity('Adres Boş Geçilemez')">@Model.ProjectAltLocation</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                            <input type="hidden" id="id" name="id" value="@Model.ID" />
                            <button type="submit" class="btn btn-primary" style="float:right"><i class="fa fa-check-circle"></i> Kaydet </button>
                            <a class="btn btn-danger" style="float:left" href="@Url.Action("CompleteProjects", "Project")">Geri Dön</a>
                        </div>
                    </div>
                    <div class="form-group last">
                        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                            <h6 style="float:right">* İle Gösterilen Yerler Boş Geçilemez</h6>
                        </div>
                    </div>
                    <!-- END Right Side -->
                </form>
            </div>
        </div>
    </div>
</div>@*Update Form*@

<footer>
    <p>2016 © <a target="_blank" href="http://www.cizgitech.com">Cizgi-Tech</a> Yazılım Çözümleri</p>
</footer> @*Footer*@

@*Scripts Down Here*@

<script type="text/javascript">

    function OnlyNumber() {
        if ((event.keyCode < 48) || (event.keyCode > 57)) {
            return false;
        }
    }

</script>@*Only Number Script*@

<script type="text/javascript">
    function ErrorMessage() {
        alert("Başında * Olan Yerler Boş Geçilemez");
    }
    function Control() {
        var editorText = CKEDITOR.instances.Content.getData();
        if (editorText.length == 0) {
            ErrorMessage();
            return false;
        }
        else {
            return true;
        }

    }
</script>@*Content Control*@
