@using ProjeKulubu.Models
@{ 
    db2299D218BEEntities8 db = new db2299D218BEEntities8();
    var data = db.CustomerComments.ToList();
}


<div class="row">
    <div class="col-md-12">
        <div class="box box-black">
            <div class="box-title">
                <h3><i class="fa fa-bars"></i> Mevcut Yayındaki Müşteri Yorumları</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                <div class="btn-toolbar pull-right">
                    <div class="btn-group">
                        <a class="btn btn-circle show-tooltip" id="NewAdd" onclick="GoAddProject()" title="" data-original-title="Yeni Ekle"><i class="fa fa-plus"></i></a>
                        <a class="btn btn-circle show-tooltip" title="Silme" href="#"><i class="fa fa-trash-o"></i></a>
                    </div>
                    <div class="btn-group">
                        <a class="btn btn-circle show-tooltip" title="Yenile" href="@Url.Action("CustomerIndex","Customer")"><i class="fa fa-repeat"></i></a>
                    </div>
                </div>
                <br /><br />
                <div class="table-responsive">
                    <table class="table table-advance">
                        <thead>
                            <tr>
                                <th style="width:18px"><input type="checkbox" /></th>
                                <th>ID</th>
                                <th>Müşteri İsmi</th>
                                <th>Müşteri Yorum Resmi</th>
                                <th>İncele</th>
                                <th>Düzenleme</th>
                                <th>Silme</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (CustomerComments item in data)
                            {
                                <tr class="table-flag-blue">
                                    <td><input type="checkbox" /></td>
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td><ul class="gallery">
    <li>
        <a href="~/Dosyalar/@item.CommentsPictureURL" class="show-tooltip" title="Resmi İnceleyin" rel="prettyPhoto">
            <div>
                <span class="fa fa-image"></span>
            </div>
        </a>
    </li>
</ul>
</td>
                                    <td><a class="btn btn-sm show-tooltip" title="İnceleme" href="@Url.Action("CustomerView","Customer")/@item.ID"><i class="fa fa-search"></i></a></td>
                                    <td><a class="btn btn-sm show-tooltip" title="Düzenleme" href="@Url.Action("CustomerUpdate","Customer")/@item.ID"><i class="fa fa-edit"></i></a></td>
                                    <td><a class="btn btn-danger show-tooltip" title="Silme" href="@Url.Action("CustomerDelete","Customer")/@item.ID"><i class="fa fa-trash"></i></a></td>
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                </div>
                <div class="text-center">
                    <ul class="pagination">
                        <li><a href="#">← Önceki</a></li>
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">Sonraki → </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>@*Customer List*@

