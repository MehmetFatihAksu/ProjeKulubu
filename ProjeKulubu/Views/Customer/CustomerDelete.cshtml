@using ProjeKulubu.Models
@model CustomerComments

@{
    ViewBag.Title = "CustomerDelete";
    Layout = "~/Views/AdminShared/_Layout.cshtml";
}

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Admin")">Ana Sayfa</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li>
            <i class="fa fa-comment"></i>
            <a href="@Url.Action("CustomerIndex","Customer")">Müşteri Yorumları</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li class="active"><i class="fa fa-trash-o"></i>Yorum Silme Ekranı</li>
    </ul>
</div>@*Header*@

<form action="/Customer/CustomerDataDelete" method="post" class="form-horizontal form-row-separated">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-black">
                    <div class="box-title">
                        <h3><i class="fa fa-trash-o"></i> Mevcut Yorumu Silmek İstediğinizden Eminmisiniz ?</h3>
                        <div class="box-tool">
                            <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                            <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <div class="form-group">
                            <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Müşteri Yorum ID:</label>
                            <div class="col-sm-9 col-lg-10 controls">

                                <input type="text" class="form-control" style="color:#000000;" disabled value="@Model.ID" id="ID" name="textfield3" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Müşteri İsmi:</label>
                            <div class="col-sm-9 col-lg-10 controls">
                                <input type="text" class="form-control show-popover" style="color:#000000;" value="@Model.Name" disabled id="QuestionContent" name="textfield3" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Müşteri Yorum Resmi:</label>
                            <div class="col-sm-9 col-lg-10 control">
                                <img src="~/Dosyalar/@Model.CommentsPictureURL" alt="Alternate Text" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                                <input type="hidden" id="id" name="id" value="@Model.ID" />
                                <button type="submit" class="btn btn-primary" style="float:right" onclick="Success()">Sil</button>
                                <a class="btn btn-danger" style="float:left" href="@Url.Action("CustomerIndex","Customer")">Geri Dön</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>@*Customer Delete Form*@

<footer>
    <p>2016 © <a target="_blank" href="http://www.cizgitech.com">Cizgi-Tech</a> Yazılım Çözümleri</p>
</footer>@*Footer*@


@*Scripts Down Here*@

<script type="text/javascript">
    function Success() {
        alert("Müşteri Yorumu Başarıyla Silindi");
    }
</script>@*Success Message*@