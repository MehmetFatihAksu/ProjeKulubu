@model ProjeKulubu.Models.Team

@{
    ViewBag.Title = "TeamDelete";
    Layout = "~/Views/AdminShared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="/Content/AdminContent/assets/bootstrap-fileupload/bootstrap-fileupload.css" />

<script type="text/javascript">

    function DataDelete() {

        $.ajax({

            type: "POST",
            url: "/Team/TeamDataDelete/",
            data: { id : $("#dataId").val()},
            ajaxasync: true,
            traditional: true,
            success: function (response) {
                alert("Üye Başarıyla Silindi");
                window.location.href = "/Team/TeamIndex";
            },
            error: function (response) {
                console.log("Hata Oluştu");
            }

        });
    }

</script>


<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Admin")">Ana Sayfa</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li>
            <i class="fa fa-users"></i>
            <a href="@Url.Action("TeamIndex","Team")">Ekip Yönetimi</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li class="active"><i class="fa fa-trash-o"></i>Ekip Üyesi Silme Ekranı</li>
    </ul>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="box box-black">
            <div class="box-title">
                <h3><i class="fa fa-trash"></i> Mevcut Üyeyi Silmek İstediğinizden Eminmisiniz?</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                <form action="/Team/AddTeamMember" method="post" enctype="multipart/form-data" class="form-horizontal form-row-separated">
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Üye İsim ve Soyisim:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" name="name" id="name" disabled value="@Model.MemberName" class="form-control show-popover">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2 control-label">Üye Pozisyon:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <select name="position" disabled id="position" class="form-control input-sm" tabindex="1">
                                <option value="Pozisyon 1">@Model.MemberPozision</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2 control-label">Üye Tecrübe:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <select name="exp" disabled id="exp" class="form-control input-sm" tabindex="1">
                                <option value="Yıldız 1">@Model.MemberExperience</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Üye Yaşı:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" name="age" id="age" value="@Model.MemberAge" disabled class="form-control show-popover">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2 control-label">Üye Resim:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="fileupload-new img-thumbnail" style="width: 200px; height: 150px;">
                                    <img src="~/Dosyalar/@Model.MemberPictureURL" alt="" />
                                </div>
                                <div class="fileupload-preview fileupload-exists img-thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Üye Facebook:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" name="facebook" id="facebook" value="@Model.MemberFacebookURL" disabled class="form-control show-popover">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Üye Twitter:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" name="twitter" id="twitter" value="@Model.MemberTwitterURL" disabled class="form-control show-popover">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Üye GooglePlus:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" name="google" id="google"  disabled value="@Model.MemberGoogleURL" class="form-control show-popover">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Üye Linkedin:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" name="linkedin" id="linkedin" value="@Model.MemberLinkedinURL" class="form-control show-popover" disabled>
                        </div>
                    </div>
                    <div class="box-content">

                        <div class="form-group">
                            <label class="col-sm-3 col-lg-2 control-label">Üye Biyografisi:</label>
                            <div class="col-sm-9 col-lg-10 controls">
                                <textarea class="form-control col-md-12" name="biografi" id="biografi" disabled rows="6">@Model.MemberBiografi</textarea>
                            </div>
                        </div>

                    </div>

                    <div class="form-group last">
                        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                            <input type="hidden" id="dataId" value="@Model.ID" />
                            <input type="button" class="btn btn-primary" style="float:right" value="Sil" onclick="DataDelete()" />
                            @ViewBag.Error
                            <a class="btn btn-danger" style="float:left" href="@Url.Action("TeamIndex","Team")">Geri Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<footer>
    <p>2016 © <a href="http://www.cizgitech.com">Cizgi-Tech</a> Yazılım Çözümleri</p>
</footer>


<a id="btn-scrollup" class="btn btn-circle btn-lg" href="#"><i class="fa fa-chevron-up"></i></a>


<script type="text/javascript" src="/Content/AdminContent/assets/bootstrap-fileupload/bootstrap-fileupload.min.js"></script>