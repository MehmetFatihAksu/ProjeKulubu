@using ProjeKulubu.Models
@model OurPictures

@{
    ViewBag.Title = "PicturesView";
    Layout = "~/Views/AdminShared/_Layout.cshtml";
}

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Admin")">Ana Sayfa</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li>
            <i class="fa fa-image"></i>
            <a href="@Url.Action("PicturesIndex","Pictures")">Bizden Resimler</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li class="active"><i class="fa fa-search"></i>Resim İnceleme Ekranı</li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="box box-black">
            <div class="box-title">
                <h3><i class="fa fa-search"></i>Mevcut Resmin İncelenme Ekranı</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                <form class="form-horizontal form-row-seperated">

                    <div class="caption">
                        <div class="piko-title5">
                            <h3 class="shop"><span class="line2"></span><span class="line"></span><span class="text"><a href="#"><strong>@Model.PictureSEO</strong></a></span></h3>
                            <img src="~/Dosyalar/@Model.PictureURL" style="max-height:180px;max-width:152px" alt="product construction" class="piko-thub-img ">
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                            <a class="btn btn-danger" style="float:right" href="@Url.Action("PicturesIndex","Pictures")">Geri Dön</a>
                        </div>

                    </div>

                </form>

            </div>
        </div>
    </div>
</div>



<footer>
    <p>2016 © <a href="http://www.cizgitech.com">Cizgi-Tech</a> Yazılım Çözümleri</p>
</footer>


