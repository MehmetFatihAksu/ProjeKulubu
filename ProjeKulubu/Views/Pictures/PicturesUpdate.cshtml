@using ProjeKulubu.Models
@model OurPictures

@{
    ViewBag.Title = "PicturesUpdate";
    Layout = "~/Views/AdminShared/_Layout.cshtml";
}

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Admin")">Ana Sayfa</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li>
            <i class="fa fa-image"></i>
            <a href="@Url.Action("PicturesIndex","Pictures")">Bizden Resimler</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li class="active"><i class="fa fa-edit"></i>Resim Düzenleme Ekranı</li>
    </ul>
</div>@*Header*@

<div class="row">
    <div class="col-md-12">
        <div class="box box-black">
            <div class="box-title">
                <h3><i class="fa fa-edit"></i> Mevcut Resmin Düzenlenme Formu</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                <form action="/Pictures/PicturesDataUpdate" class="form-horizontal form-row-separated" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2 control-label">* Resim:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="fileupload-new img-thumbnail" style="width: 200px; height: 150px;">
                                    <img src="~/Dosyalar/@Model.PictureURL" alt="" />
                                </div>
                                <div class="fileupload-preview fileupload-exists img-thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                <div>
                                    <span class="btn btn-default btn-file">
                                        <span class="fileupload-new">Resim Seç</span>
                                        <span class="fileupload-exists">Değiştir</span>

                                        <input type="file" required oninvalid="this.setCustomValidity('Resim Kısmını Boş Geçemezsiniz')" accept="image/*" oninput="    setCustomValidity('')"  id="uploadFile" name="Picture" class="file-input" />
                                    </span>
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">* Resim SEO:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" name="PictureSEO" required oninvalid="this.setCustomValidity('SEO Kısmını Boş Geçemezsiniz')" style="color:#000000" oninput="setCustomValidity('')" id="CustomerName" placeholder="Resim SEO" class="form-control show-popover" data-trigger="hover" data-content="Resim İçin Anahtar Kelime Giriniz" data-original-title="Resim SEO" value="@Model.PictureSEO" data-placement="left">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                            <input type="hidden" id="id" name="id" value="@Model.ID" />
                            <button type="submit" class="btn btn-primary" style="float:right"><i class="fa fa-check-circle"></i> Kaydet</button>
                            <a class="btn btn-danger" style="float:left" href="@Url.Action("PicturesIndex","Pictures")">Geri Dön</a>
                        </div>
                    </div>
                    <div class="form-group last">
                        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                            <h6 style="float:right">Başında * Olan Yerler Doldurulmak Zorundadır.</h6>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>@*Pictures Update Form*@

<footer>
    <p>2016 © <a target="_blank" href="http://www.cizgitech.com">Cizgi-Tech</a> Yazılım Çözümleri</p>
</footer>@*Footer*@

