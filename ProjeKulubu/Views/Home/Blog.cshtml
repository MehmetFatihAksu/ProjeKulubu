@model PagedList.IPagedList<ProjeKulubu.Models.Blog>
@using PagedList.Mvc
@using ProjeKulubu.Models

@{ 
    db2299D218BEEntities10 db = new db2299D218BEEntities10();
    var popList = db.Blog.OrderByDescending(x => x.BlogViewCount).Take(3);
    var newList = db.Blog.OrderByDescending(x => x.ID).Take(3);
    var tagsList = db.Tags.OrderByDescending(x=>x.ID).Take(20);
    var january = db.Blog.Where(x => x.BlogDate.Value.Month == 01).ToList();
    var february = db.Blog.Where(x => x.BlogDate.Value.Month == 02).ToList();
    var march = db.Blog.Where(x => x.BlogDate.Value.Month == 03).ToList();
    var april = db.Blog.Where(x => x.BlogDate.Value.Month == 04).ToList();
    var may = db.Blog.Where(x => x.BlogDate.Value.Month == 05).ToList();
    var june = db.Blog.Where(x => x.BlogDate.Value.Month == 06).ToList();
    var july = db.Blog.Where(x => x.BlogDate.Value.Month == 07).ToList();
    var august = db.Blog.Where(x => x.BlogDate.Value.Month == 08).ToList();
    var september = db.Blog.Where(x => x.BlogDate.Value.Month == 09).ToList();
    var october = db.Blog.Where(x => x.BlogDate.Value.Month == 10).ToList();
    var november = db.Blog.Where(x => x.BlogDate.Value.Month == 11).ToList();
    var december = db.Blog.Where(x => x.BlogDate.Value.Month == 12).ToList();



}

@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="banner margin-t150">
    <div class="container page-banner">
        <div class="col-sm-6 col-md-6">
            <h1>MAKALELE YAZILARIMIZ</h1>
        </div>
        <div class="col-sm-6 col-md-6">
            <ol class="breadcrumb pull-right">
                <li><a href="@Url.Action("Index","Home")">Ana Sayfa</a></li>
                <li class="active">Makaleler</li>
            </ol>
        </div>
    </div>
</section>

<section class="padding-tb50">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-sm-7">
                @foreach (var item in Model)
                {
                        <div class="row team1">
                            <div class="col-sm-12 col-md-12">
                                <!--post box-->
                                <div class="box">
                                    <!--blog date-->
                                    <div class="blog_date2">
                                    </div>
                                    <!--blog image-->
                                    <figure>
                                        <img style="width:100%;height:350px" src="~/Dosyalar/@item.BlogPictureURL">
                                    </figure> <!--end blog image-->
                                    <!--blog caption-->
                                    <div class="caption">
                                        <h2>@item.BlogTitle</h2>
                                        <ul class="piko-li">
                                            <li><i class="fa fa-calendar"></i>  @item.BlogDate.Value.ToShortDateString()</li>
                                            <li><i class="fa fa-user"></i> Yazar :</li>

                                            <li>
                                                <i class="fa fa-tags"></i>
                                                @foreach (var tags in item.Tags.Where(x => x.BlogID == item.ID))
                                                {<a href="#">#@tags.TagsName,   </a>}
                                            </li>

                                            <li><i class="fa fa-search"></i>@item.BlogViewCount</li>
                                            
                                        </ul>
                                        <p>@item.BlogContent</p>
                                            <a href="@Url.Action("BlogSingle", "Home")/@item.ID">Devamını Oku</a>
                                    </div> <!--end blog caption-->
                                </div>  <!--end post box-->
                            </div> <!--end post-->
                            <!--end post-->
                        </div>  <!--end of row-->

                }
                <!--start pagination-->
                <div class="custom-pagi">
                    <ul class="pagination">
                        @Html.PagedListPager(Model, page => Url.Action("Blog", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }), new PagedListRenderOptions { LinkToPreviousPageFormat = "‹ Önceki", LinkToNextPageFormat = "Sonraki ›" })
                    </ul>
                </div>
                <!--end of pagination-->
            </div>
            <div class="col-md-4 col-sm-5">
                <!--tab content-->
                <!--tab content-->
                <!--tab filter-->
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#sectionA"> Popüler</a></li>
                    <li><a data-toggle="tab" href="#sectionB"> Yeni</a></li>
                </ul>  <!--tab filter-->
                <!--tab body content-->
                <div class="tab-content tab-widget">
                    <div id="sectionA" class="tab-pane fade in active">
                        <!--tab post-->
                    @foreach (var item in popList)
                    {
                        <div class="media">
                            <div class="media-left">
                                <a href="@Url.Action("BlogSingle","Home")/@item.ID">
                                    <img style="width:100%;height:38px" class="media-object" src="~/Dosyalar/@item.BlogPictureURL" alt="@item.BlogPictureSEO">
                                </a>
                            </div>
                            <div class="media-body">
                                <a href="@Url.Action("BlogSingle","Home")/@item.ID">@item.BlogTitle</a><br>
                                <p>@item.BlogDate.Value.ToShortDateString()</p>
                            </div>
                        </div>   <!--end tab post-->
                    }
                        
                    </div>   <!--end of section a-->
                    <!--section b-->
                    <div id="sectionB" class="tab-pane fade">
                    @foreach (var item in newList)
                    {
                        <div class="media">
                            <div class="media-left">
                                <a href="@Url.Action("BlogSingle","Home")/@item.ID">
                                    <img style="width:100%;height:38px" class="media-object" alt="@item.BlogPictureSEO" src="~/Dosyalar/@item.BlogPictureURL">
                                </a>
                            </div>
                            <div class="media-body">
                                <a href="@Url.Action("BlogSingle","Home")/@item.ID">@item.BlogTitle</a><br>
                                <p>@item.BlogDate.Value.ToShortDateString()</p>
                            </div>
                        </div>
                    }
                        
                    </div> <!--end section b-->
                </div> <!--End tabs-->
                <!--start archive-->
                <!--start tag-->
                <div class="margin-b30">
                    <div class="piko-title4 widget">
                        <h3><span class="line"></span><span class="text">Etiketler</span></h3>
                    </div><br>
                    <div class="footer2-box">
                        @foreach (var item in tagsList)
                        {
                            <a href="@Url.Action("BlogSingle","Home")/@item.Blog.ID" class="btn-s5 gray3" title="@item.Blog.BlogTitle">@item.TagsName</a>

                        }
                        
                    </div>
                </div>  <!--end start tag-->
                <div class="margin-b30">
                    <div class="piko-title4 widget">
                        <h3><span class="line"></span><span class="text">Arşiv</span></h3>
                    </div><br>
                    <div class="archive">
                        <a href="#">
                            Ocak @if (january.Count == 0)
                            {
                                <mark>( 0 )</mark>
                            }
                            else
                            {
                                <mark>
                                    ( @january.Count )
                                </mark>
                            }
                        </a>
                        <a href="#">Şubat @if (february.Count == 0)
                        {
                            <mark>( 0 )</mark>
                        }
                        else
                        {
                            <mark>
                                ( @february.Count )
                            </mark>
                        }</a>
                        <a href="#">Mart @if (march.Count == 0)
                        {
                            <mark>( 0 )</mark>
                        }
                        else
                        {
                            <mark>
                                ( @march.Count )
                            </mark>
                        }
                        </a>
                        <a href="#">Nisan @if (april.Count == 0)
                        {
                            <mark>( 0 )</mark>
                        }
                        else
                        {
                            <mark>
                                ( @april.Count )
                            </mark>
                        }</a>
                        <a href="#">Mayıs @if (may.Count == 0)
                        {
                            <mark>( 0 )</mark>
                        }
                        else
                        {
                            <mark>
                                ( @may.Count )
                            </mark>
                        }</a>
                        <a href="#">Haziran @if (june.Count == 0)
                        {
                            <mark>( 0 )</mark>
                        }
                        else
                        {
                            <mark>
                                ( @june.Count )
                            </mark>
                        }</a>
                        <a href="#">Temmuz @if (july.Count == 0)
                        {
                            <mark>( 0 )</mark>
                        }
                        else
                        {
                            <mark>
                                ( @july.Count )
                            </mark>
                        }</a>
                        <a href="#">Ağustos @if (august.Count == 0)
                        {
                            <mark>( 0 )</mark>
                        }
                        else
                        {
                            <mark>
                                ( @august.Count )
                            </mark>
                        }</a>
                        <a href="#">Eylül @if (september.Count == 0)
                        {
                            <mark>( 0 )</mark>
                        }
                        else
                        {
                            <mark>
                                ( @september.Count )
                            </mark>
                        }</a>
                        <a href="#">Ekim @if (october.Count == 0)
                        {
                            <mark>( 0 )</mark>
                        }
                        else
                        {
                            <mark>
                                ( @october.Count )
                            </mark>
                        }</a>
                        <a href="#">Kasım @if (november.Count == 0)
                        {
                            <mark>( 0 )</mark>
                        }
                        else
                        {
                            <mark>
                                ( @november.Count )
                            </mark>
                        }</a>
                        <a href="#">Aralık @if (december.Count == 0)
                        {
                            <mark>( 0 )</mark>
                        }
                        else
                        {
                            <mark>
                                ( @december.Count )
                            </mark>
                        }
                           </a>


                    </div>
                </div>
            </div>  <!--end of col-->
        </div> <!--end of row-->
    </div> <!--end of container-->
</section>
