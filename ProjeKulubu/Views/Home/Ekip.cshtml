@using ProjeKulubu.Models;

@{
    db2299D218BEEntities8 db = new db2299D218BEEntities8();
    List<Team> teamMemberList = new List<Team>();

    teamMemberList = db.Team.Where(x => x.MemberName != null && x.MemberPictureURL != null).ToList();
}



@{
    ViewBag.Title = "Ekip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="banner margin-t150">
    <div class="container page-banner">
        <div class="col-sm-6 col-md-6">
            <h1>EKİP ÜYELERİMİZ</h1>
        </div>
        <div class="col-sm-6 col-md-6">
            <ol class="breadcrumb pull-right">
                <li><a href="@Url.Action("Index","Home")">Ana Sayfa</a></li>
                <li class="active">Ekip Üyelerimiz</li>
            </ol>
        </div>
    </div>
</section>

<!--board of members team-->
<section class="padding-tb75 team1 team-m">
    <div class="container">
        <!--heading-->
        <div class="piko-title9">
            <h3>PROJE KULÜBÜ TÜRKİYE</h3>
            <hr>
            <p>EKİBİMİZ</p>
        </div> <!--end heading-->
        <div id="team-member" class="row">
            
            @foreach (Team item in teamMemberList)
            {
                <div class="item col-sm-6 col-md-3">
                    <div class="box">
                        <figure>
                            <img src="~/Dosyalar/@item.MemberPictureURL" alt="@item.MemberName">
                            <figcaption>
                                <i>
                                    <a href="@item.MemberFacebookURL" target="_blank" class="fa fa-facebook"></a>
                                    <a href="@item.MemberGoogleURL" target="_blank" class="fa fa-google-plus"></a>
                                    <a href="@item.MemberTwitterURL" target="_blank" class="fa fa-twitter"></a>
                                    <a href="@item.MemberLinkedinURL" target="_blank" class="fa fa-linkedin"></a>
                                </i>
                            </figcaption>
                        </figure>
                        <div class="caption">
                            <div class="piko-title6 two">
                                <h4><strong>@item.MemberName</strong></h4>
                                <hr>
                                <span>@item.MemberName</span>
                                <p>@item.MemberBiografi</p><br>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="clearfix"></div>
        </div> <!--end of teammember-->
    </div> <!--end of container-->
</section>

