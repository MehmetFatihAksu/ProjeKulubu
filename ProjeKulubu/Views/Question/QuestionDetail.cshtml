@using ProjeKulubu.Models;
@model AskedQuestions

@{
    ViewBag.Title = "QuestionDetail";
    Layout = "~/Views/AdminShared/_Layout.cshtml";
}

<h2>Sık Sorulan Sorular Detay Sayfası</h2>

<link rel="stylesheet" type="text/css" href="/Content/AdminContent/assets/bootstrap-fileupload/bootstrap-fileupload.css" />
<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-title">
                <h3><i class="fa fa-star-half-full"></i>Seçilen Referansın Silinme Ekranı</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">

                @foreach (AskedQuestions item in (IEnumerable<AskedQuestions>)Viewdata["Data"])
                {
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Soru Başlığı:</label>
                        <div class="col-sm-9 col-lg-10 controls">

                            <input type="text" class="form-control show-popover" disabled id="QuestionContent" value="@item.Question" placeholder="Soru Başlığını Giriniz" data_trigger="hover" data_content="Bu kısıma soru metni giriniz..." data_original_title="Soru Metni" data_placement="top" name="textfield3" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2 control-label">Soru Cevap:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" class="form-control col-md-12 ckeditor" id="Answer" rows="6" disabled value="@item.QuestionAnswer" />
                        </div>
                    </div>
                }

                <div class="form-group last">
                    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">

                        <input type="button" class="btn btn-primary" style="float:right" onclick="DataDelete()" value="Sil" />
                    </div>

                </div>
            </div>
        </div>
    </div>



    <footer>
        <p>2016 © <a href="http://www.cizgitech.com">Cizgi-Tech</a> Yazılım Çözümleri</p>
    </footer>


    <a id="btn-scrollup" class="btn btn-circle btn-lg" href="#"><i class="fa fa-chevron-up"></i></a>
