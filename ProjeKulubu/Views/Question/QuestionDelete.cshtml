@using ProjeKulubu.Models
@model AskedQuestions


<script type="text/javascript">

    function DataDelete() {

        $.ajax({
            
            type: "POST",
            url: "/Question/QuestionDataDelete/",
            data: { id : $("#dataId").val()},
            ajaxasync: true,
            traditional: true,
            success: function (response) {
                alert("Soru Başarıyla Silindi");
                window.location.href = "/Question/QuestionIndex";
            },
            error: function (response) {
                console.log("Hata Oluştu");
            }

        });
    }

</script>

@{
    ViewBag.Title = "QuestionDelete";
    Layout = "~/Views/AdminShared/_Layout.cshtml";
}


<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Admin")">Ana Sayfa</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li>
            <i class="fa fa-question-circle"></i>
            <a href="@Url.Action("QuestionIndex","Question")">S.S.S Yönetimi</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li class="active"><i class="fa fa-trash-o"></i>Soru Silme Ekranı</li>
    </ul>
</div>

<aside id="QuesionDeleteDetail" class="QuestionContent">

    <form action="/Question/QuestionDelete" class="form-horizontal form-row-separated">

        
        <div class="row">
            <div class="col-md-12">
                <div class="box box-black">
                    <div class="box-title">
                        <h3><i class="fa fa-trash-o"></i> Mevcut Soruyu Silmek İstediğinizden Eminmisiniz ?</h3>
                        <div class="box-tool">
                            <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                            <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <div class="form-group">
                            <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Soru ID:</label>
                            <div class="col-sm-9 col-lg-10 controls">

                                <input type="text" style="color:#000000" class="form-control show-popover" disabled value="@Model.ID" id="ID"   name="textfield3" />
                            </div>
                        </div>
                            <div class="form-group">
                                <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Soru Başlığı:</label>
                                <div class="col-sm-9 col-lg-10 controls">
                                    <input type="text" class="form-control show-popover" value="@Model.Question" style="color:#000000" disabled id="QuestionContent" name="textfield3" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 col-lg-2 control-label">Soru Cevap:</label>
                                <div class="col-sm-9 col-lg-10 controls">
                                    <textarea class="form-control" disabled id="Answer" rows="6" style="color:#000000">@Model.QuestionAnswer</textarea>    
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                                    <input type="hidden" id="dataId" value="@Model.ID" />
                                    <input type="button" class="btn btn-primary" style="float:right" value="Sil" onclick="DataDelete()" />
                                    @ViewBag.Error
                                    <a class="btn btn-danger" style="float:left" href="@Url.Action("QuestionIndex","Question")">Geri Dön</a>
                                </div>
                                
                            </div>
                    </div>
                </div>
            </div>
        </div>
            



    </form>

</aside>

