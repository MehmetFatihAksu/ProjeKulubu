@model ProjeKulubu.Models.AskedQuestions

@{
    ViewBag.Title = "QuestionIndex";
    Layout = "~/Views/AdminShared/_Layout.cshtml";
}

<script src="~/Content/AdminContent/js/buttonActions.js"></script>
<script type="text/javascript" src="/Content/AdminContent/assets/ckeditor/ckeditor.js"></script>


<div class="page-title">
    <div>
        <h1><i class="fa fa-bars"></i> Sık Sorulan Sorular</h1>
        <h4>Bu kısımda soru ve cevap ekleyip silebilir veya düzenleyebilirsiniz</h4>
    </div>
</div>

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Admin")">Ana Sayfa</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li class="active">Sık Sorulan Sorular</li>
    </ul>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="box box-black">
            <div class="box-title">
                <h3><i class="fa fa-question-circle"></i> Soru Ekleme Formu</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                <form action="/Question/AddQuestion" method="post" enctype="multipart/form-data" class="form-horizontal form-row-separated">
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Soru Başlığı:</label>
                        <div class="col-sm-9 col-lg-10 controls">

                            <input type="text" class="form-control show-popover" id="Question" placeholder="Soru Başlığını Giriniz" maxlength="100" data_trigger="hover" data_content="Bu kısıma soru metni giriniz..." data_original_title="Soru Metni" data_placement="top" name="Question" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2 control-label">Soru Cevap:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <textarea class="form-control col-md-12 ckeditor"  id="Answer" name="Answer" rows="6"></textarea>
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary" style="float:right" onclick="DataSave()"><i class="fa fa-check-circle"></i> Kaydet</button>                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> @* Soru EKLEME *@

@Html.Partial("QuestionList", "Question")


<footer>
