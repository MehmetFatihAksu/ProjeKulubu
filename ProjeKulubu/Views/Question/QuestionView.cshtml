@using ProjeKulubu.Models
@model AskedQuestions
@{
    ViewBag.Title = "QuestionView";
    Layout = "~/Views/AdminShared/_Layout.cshtml";
}


<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Admin")">Ana Sayfa</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li>
            <i class="fa fa-question-circle"></i>
            <a href="@Url.Action("QuestionIndex","Question")">S.S.S Yönetimi</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li class="active"><i class="fa fa-search"></i>Soru İnceleme Ekranı</li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="box box-black">
            <div class="box-title">
                <h3><i class="fa fa-search"></i>Mevcut Sorunun İncelenme Ekranı</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                <form class="form-horizontal form-row-seperated">
                <div class="panel panel-info">
                    <div class="panel-heading" id="dataQuestion">
                        <h4 class="panel-title accordion-toggle">
                         @Model.Question
                        </h4>
                    </div>
                    <div id="dataAnswer">
                        <div class="panel-body">
                            <p>@Model.QuestionAnswer</p>
                        </div>
                    </div>
                        
                </div> <!--panel info-->
                    <div class="form-group">
                        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                            <a class="btn btn-danger" style="float:right" href="@Url.Action("QuestionIndex","Question")">Geri Dön</a>
                        </div>

                    </div>
                    </form>
                
            </div>
        </div>
    </div>
    </div>

<footer>
    <p>2016 © <a href="http://www.cizgitech.com">Cizgi-Tech</a> Yazılım Çözümleri</p>
</footer>

