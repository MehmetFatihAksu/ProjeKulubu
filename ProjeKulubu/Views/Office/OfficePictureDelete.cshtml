@using ProjeKulubu.Models;
@model OfficePictures
@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "OfficePictureDelete";
    Layout = "~/Views/AdminShared/_Layout.cshtml";
}

<script type="text/javascript">


    function OfficePictureDelete() {

        $.ajax({

            type: "POST",
            url: "/Office/OfficePictureDataDelete/",
            data: { id: $("#dataId").val() },
            ajaxasync: true,
            traditional: true,
            success: function (response) {
                alert("Ofis Resmi Başarıyla Silindi");
                window.location.href = "/Office/OfficePictureIndex";
            },
            error: function (response) {
                console.log("Hata Oluştu");
            }

        });
    }



</script>



<div class="page-title">
    <div>
        <h1><i class="fa fa-star"></i> Ofis Resimleri Silme </h1>
        <h4>Ofisinize Ait Bu Resmi Silmek İstediğinize Emin Misiniz?</h4>
    </div>
</div>

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Admin")">Ana Sayfa</a>
            <span class="divider"><i class="fa fa-angle-right"></i></span>
        </li>
        <li class="active">Ofis Görsel Yönetimi</li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="box box-black">
            <div class="box-title">
                <h3><i class="fa fa-star"></i>Ofis Resimleri Silme Formu</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">*Resmin Şuan Ait Olduğu Ofis:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" name="Office" disabled value="@Model.Office.OfficeName" style="color:#000000" id="Office" class="form-control show-popover" data-trigger="hover" data-content="bu kısımda resminizin hangi ofise ait olduğu gösterilir." data-original-title="Ofis Resim" data-placement="left">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">* Ofis Resmi:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <img src="~/Dosyalar/@Model.PictureURL" alt="@Model.PictureSEO" width="200" height="200" />
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">* Ofis Resim SEO:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" disabled value="@Model.PictureSEO" name="OfficePictureSEO" required oninvalid="this.setCustomValidity('SEO kısmını boş geçemezsiniz')" oninput="setCustomValidity('')" style="color:#000000" id="OfficePictureSEO" placeholder="SEO Kelimenizi Giriniz" class="form-control show-popover" data-trigger="hover" data-content="Bu kısıma ofis resminiz için maksimum üç anahtar kelime giriniz" data-original-title="Ofis Resim SEO" data-placement="left">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield3" class="col-sm-3 col-lg-2 control-label">Ofis Resim Açıklama:</label>
                        <div class="col-sm-9 col-lg-10 controls">
                            <input type="text" disabled value="@Model.PictureALT" name="OfficePictureDesc" id="OfficePictureDesc" style="color:#000000" placeholder="Kısa Açıklama Cümlesi Giriniz" class="form-control show-popover" data-trigger="hover" data-content="Bu kısıma ofis resminiz için kısa açıklama giriniz" data-original-title="Ofis Resim Açıklama" data-placement="left">
                        </div>
                    </div>
                    <div class="form-group last">
                        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                            <input type="hidden" id="dataId" value="@Model.ID" />
                            <button type="submit" class="btn btn-primary" onclick="OfficePictureDelete()" style="float:right"><i class="fa fa-check-circle"></i> Sil </button>
                            @ViewBag.Error
                            <a class="btn btn-danger" style="float:left" href="@Url.Action("OfficePictureIndex","Office")">Geri Dön</a>
                        </div>
                    </div>
               
            </div>
        </div>
    </div>
</div>

<footer>
    <p>2016 © <a target="_blank" href="http://www.cizgitech.com">Cizgi-Tech</a> Yazılım Çözümleri</p>
</footer>@*Footer*@

<a id="btn-scrollup" class="btn btn-circle btn-lg" href="#"><i class="fa fa-chevron-up"></i></a>
<script type="text/javascript" src="/Content/AdminContent/assets/bootstrap-fileupload/bootstrap-fileupload.min.js"></script>
<script src="~/Content/AdminContent/js/buttonActions.js"></script>
